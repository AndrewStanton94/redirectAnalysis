{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:vue/recommended"],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "warn",
		"vue/html-indent": ["error", "tab"],
		"vue/html-self-closing": [
			"error",
			{
				"html": {
					"void": "never",
					"normal": "always",
					"component": "never"
				}
			}
		]
	}
}
